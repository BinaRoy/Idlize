{
    "name": "@idlizer/smoke-tests",
    "private": true,
    "version": "1.0.0",
    "description": "smoke tests",
    "license": "Apache-2.0",
    "keywords": [],
    "scripts": {
      "test:dtsgen:run": "node scripts/install.mjs && npx --yes scripts/.packages/idlizer-dtsgen-*.tgz -h",
      "test:arkgen:run": "node scripts/install.mjs && npx --yes scripts/.packages/idlizer-arkgen-*.tgz -h",
      "test:ohosgen:run": "node scripts/install.mjs && npx --yes scripts/.packages/idlizer-ohosgen-*.tgz -h",

      "test:arkgen:peer": "node scripts/install.mjs && npx --yes scripts/.packages/idlizer-arkgen-*.tgz --dts2peer --input-dir ./input/blank.d.ts --output-dir ./out/arkgen --verify-idl --common-to-attributes --docs=opt",
      "test:ohosgen:peer": "node scripts/install.mjs && npx --yes scripts/.packages/idlizer-ohosgen-*.tgz --use-new-ohos --language=arkts --default-idl-package mediaquery --input-files ./input/@ohos.mediaquery.d.ts --output-dir ./out/ohosgen --dts2peer"
    }
  }
{
  "name": "@idlizer/arktscgen",
  "version": "3.1.1",
  "description": "",
  "main": "lib/index.js",
  "bin": "lib/index.js",
  "files": [
    "lib/*.js",
    "templates/*",
    "./libarkts-copy/src",
    "./libarkts-copy/native",
    "./libarkts-copy/generator",
    "./libarkts-copy/package.json",
    "./libarkts-copy/tsconfig.json",
    "!./libarkts-copy/src/generated",
    "!./libarkts-copy/native/src/generated",
    "!./libarkts-copy/native/build"
  ],
  "license": "Apache-2.0",
  "keywords": [],
  "dependencies": {
    "@idlizer/core": "2.0.42+devel",
    "@types/node": "^18.0.0",
    "commander": "^10.0.0",
    "typescript": "^4.9.5"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/chai": "^4.3.1",
    "@types/json5": "^2.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^18.0.0",
    "json5": "^2.2.3",
    "source-map-support": "^0.5.21"
  },
  "scripts": {
    "compile:core": "npm run --prefix ../core compile",
    "compile": "npm run compile:core && rollup -c",
    "external:test": "npm run --prefix ../external/arkoala-arkts/libarkts run",
    "external:clean": "rimraf ../external/arkoala-arkts/libarkts/src/generated/peers",
    "external:generate": "npm run compile && node . --panda-sdk-path ../external/incremental/tools/panda/node_modules/@panda/sdk/ --output-dir ../external/arkoala-arkts/ --options-file ../external/arkoala-arkts/libarkts/generator/options.json5 --debug --no-initialize",
    "all": "npm run compile && npm run external:clean && npm run external:generate && npm run external:test",
    "prepack": "npm run compile && mkdir -p ./build && cp -r ../external/arkoala-arkts/libarkts ./build/libarkts-copy",
    "postpack": "rimraf ./build/libarkts-copy",
    "test:pack": "npm pack --pack-destination ./build && npm run test:packed && npm run test:unpacked",
    "test:packed": "cd .. && npx --yes ./arktscgen/build/idlizer-arktscgen-*.tgz --panda-sdk-path ./external/incremental/tools/panda/node_modules/@panda/sdk --output-dir ./arktscgen/build --options-file ./external/arkoala-arkts/libarkts/generator/options.json5",
    "test:unpacked": "cd ./build/libarkts && npm i && npm run compile",
    "release": "npm run copy:libarkts && node ./tools/release.mjs"
  }
}

{
  "name": "@idlizer/libarkts-gen",
  "version": "3.0.10",
  "description": "",
  "main": "lib/index.js",
  "bin": "lib/index.js",
  "files": [
    "lib/*.js",
    "input/ignore.json5",
    "templates/*"
  ],
  "license": "Apache-2.0",
  "keywords": [],
  "dependencies": {
    "@idlizer/core": "2.0.25+devel",
    "@types/node": "^18.0.0",
    "commander": "^10.0.0",
    "typescript": "^4.9.5"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/chai": "^4.3.1",
    "@types/json5": "^2.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^18.0.0",
    "json5": "^2.2.3",
    "source-map-support": "^0.5.21"
  },
  "scripts": {
    "compile:core": "npm run --prefix ../core compile",
    "compile": "npm run compile:core && rollup -c",
    "real": "npm run compile && node . --input-file ../external/incremental/tools/panda/node_modules/@panda/sdk/ohos_arm64/include/tools/es2panda/generated/es2panda_lib/es2panda_lib.idl --output-dir ./out/real/ --options-file ./input/ignore.json5",
    "full": "npm run compile && node . --input-file ./input/full.idl --output-dir ./out/full --options-file ./input/ignore.json5",
    "subset": "npm run compile && node . --input-file ./input/full.idl --output-dir ./out/subset --options-file ./input/generate.json5",
    "external:subset": "node . --input-file ./input/full.idl --output-dir ../external/arkoala-arkts/ --options-file ./input/generate.json5 --files nativeModule,bridges",
    "external:test": "npm run --prefix ../external/arkoala-arkts/libarkts run",
    "integrate:subset": "npm run compile && npm run external:subset && npm run external:test",
    "clean:external": "rimraf ../external/arkoala-arkts/libarkts/src/generated/peers",
    "external:real": "npm run compile && node . --input-file ../external/incremental/tools/panda/node_modules/@panda/sdk/ohos_arm64/include/tools/es2panda/generated/es2panda_lib/es2panda_lib.idl --output-dir ../external/arkoala-arkts/ --options-file ./input/ignore.json5 --files bridges,nativeModule",
    "integrate:real": "npm run compile && npm run clean:external && npm run external:real && npm run external:test",
    "publish": "npm publish --tag next"
  }
}

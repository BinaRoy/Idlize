{
    "compilerOptions": {
        "target": "es2017",
        "lib": ["ESNext", "ESNext.WeakRef"],
        "moduleResolution": "node",
        "composite": true,
        "incremental": true,
        "declarationMap": true,
        "sourceMap": true,
        "declaration": true,
        "noEmitOnError": true,
        "strict": true,
        "skipLibCheck": true,
        "removeComments": false,
        "outDir": "build/peers",
        "rootDirs": ["src"],
        "module": "CommonJS",
    },
    "include": ["generated/**/*", "utils/ts/**/*", "ohos-sdk/component/**/*", "ohos-sdk/api/**/*"],
}

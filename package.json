{
    "name": "@koalaui/idlize",
    "version": "1.0.0",
    "description": "",
    "main": "build/lib/src/main.js",
    "types": "build/lib/src/main.d.ts",
    "files": [
        "build/lib/**/*.js",
        "build/lib/**/*.d.ts"
    ],
    "keywords": [],
    "dependencies": {
        "webidl2": "^24.4.1",
        "@types/webidl2": "^24.4.1",
        "commander": "^10.0.0"
    },
    "devDependencies": {
	"@types/node": "^18.0.0",
        "@types/chai": "^4.3.1",
        "@types/mocha": "^9.1.0",
        "@typescript-eslint/eslint-plugin": "^5.20.0",
        "@typescript-eslint/parser": "^5.20.0",
        "chai": "^4.3.6",
        "eslint": "^8.13.0",
        "eslint-plugin-unused-imports": "^2.0.0",
        "mocha": "^9.2.2",
        "source-map-support": "^0.5.21"
    },
    "scripts": {
        "compile": "tsc --m commonjs",
        "clean": "rimraf build dist",
        "run": "npm run compile && node . --dts2idl --input-dir ../koala-ui/arkui-common/ohos-sdk-ets/HarmonyOS-NEXT-DP1/base/ets/component --input-file common.d.ts --verify-idl --common-to-attributes --skip-comments",
        "run2h": "npm run compile && node . --dts2h --input-dir ../koala-ui/arkui-common/ohos-sdk-ets/HarmonyOS-NEXT-DP1/base/ets/component --input-file common.d.ts --verbose",
        "run2test": "npm run compile && node . --dts2test --input-dir ../koala-ui/arkui-common/ohos-sdk-ets/HarmonyOS-NEXT-DP1/base/ets/component --verbose --test-interface ButtonAttribute",
        "run2peer": "npm run compile && node . --dts2peer --input-dir ../koala-ui/arkui-common/ohos-sdk-ets/HarmonyOS-NEXT-DP1/base/ets/component --generate-interface ButtonAttribute --verbose",
        "lint": "npm run compile && node . --linter --input-dir ../koala-ui/arkui-common/ohos-sdk-ets/HarmonyOS-NEXT-DP1/base/ets/component --input-file common.d.ts --verbose",
        "lint:all": "npm run compile && node . --linter --input-dir ../koala-ui/arkui-common/ohos-sdk-ets/HarmonyOS-NEXT-DP1/base/ets/component --verbose"
    }
}

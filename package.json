    {
    "name": "@azanat/idlize",
    "version": "1.1.10",
    "description": "",
    "main": "lib/index.js",
    "bin": "lib/index.js",
    "files": [
        "lib/*.js",
        "stdlib.d.ts",
        "whitelist.json"
    ],
    "license": "Apache-2.0",
    "keywords": [],
    "dependencies": {
        "@types/webidl2": "^24.4.1",
        "commander": "^10.0.0",
        "typescript": "^4.9.5",
        "webidl2": "^24.4.1",
        "@types/node": "^18.0.0"
    },
    "devDependencies": {
        "@rollup/plugin-node-resolve": "^15.2.3",
        "@rollup/plugin-terser": "^0.4.4",
        "@rollup/plugin-typescript": "^11.1.6",
        "@types/chai": "^4.3.1",
        "@types/mocha": "^9.1.0",
        "@types/node": "^18.0.0",
        "@typescript-eslint/eslint-plugin": "^5.20.0",
        "@typescript-eslint/parser": "^5.20.0",
        "chai": "^4.3.6",
        "eslint": "^8.13.0",
        "eslint-plugin-unused-imports": "^2.0.0",
        "mocha": "^9.2.2",
        "rollup": "^4.12.1",
        "source-map-support": "^0.5.21"
    },
    "scripts": {
        "download:sdk": "node ./download-sdk.mjs",
        "download:napi": "node ./download-napi.mjs",
        "compile": "npm run download:sdk && rollup -c",
        "clean": "rimraf build dist lib",
        "run": "npm run compile && node . --dts2idl --input-dir ./interface_sdk-js/api/@internal/component/ets/ --input-file common.d.ts --verify-idl --common-to-attributes --skip-docs",
        "run:all": "npm run compile && node . --dts2idl --input-dir ./interface_sdk-js/api/@internal/component/ets/ --verify-idl --common-to-attributes --skip-docs",
        "run2h": "npm run compile && node . --idl2h --input-dir ./idl",
        "run2dts": "npm run compile && node . --idl2dts --input-dir ./idl",
        "run2test": "npm run compile && node . --dts2test --input-dir ./interface_sdk-js/api/@internal/component/ets/ --verbose --test-interface ButtonAttribute",
        "run2peer:all": "npm run compile && node . --dts2peer --input-dir ./interface_sdk-js/api/@internal/component/ets/ --output-dir ./generated/peers",
        "run2peer": "npm run compile && node . --dts2peer --input-dir ./interface_sdk-js/api/@internal/component/ets/ --generate-interface CommonMethod,ButtonAttribute --output-dir ./generated/peers",
        "lint": "npm run compile && node . --linter --input-dir ./interface_sdk-js/api/@internal/component/ets/ --input-file common.d.ts --output-dir linter --linter-whitelist whitelist.json",
        "lint:all": "npm run compile && node . --linter --input-dir ./interface_sdk-js/api/@internal/component/ets/ --output-dir linter --linter-whitelist whitelist.json",
        "check:peers": "npm run run2peer:all && tsc -p ./tsconfig-generated.json",
        "check:subset": "npm run compile && node . --dts2peer --input-dir ./tests/subset/ets/ --output-dir ./generated/subset && tsc -p ./tsconfig-subset.json && cp utils/package.json.in build/subset/package.json && node ./build/subset/tests/subset/check_serialization.js",
        "check:subset:run": "npm run check:subset && npm run compile:native-node-host && node ./build/subset/utils/ts",
        "check:peers:native": "npm run run2peer:all && npm run compile:native",
        "compile:native": "clang -std=c++11 -DKOALA_USE_NODE_VM -DKOALA_NAPI -fPIC -shared -Wall -I ./utils/cpp/ -I ./utils/cpp/node -I./node-api-headers/include -I./node-addon-api ./generated/peers/bridge.cc -o libArkoalaNative.so -ferror-limit=100",
        "configure:native-node-host": "npm run download:napi && cd ./native && meson setup build-node-host",
        "compile:native-node-host": "cd native && meson compile -C build-node-host && meson install -C build-node-host"
    }
}

{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "outDir": "build/ts",
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "#compat": ["./src/node/compat.ts"],
            "@ohos.xml": ["./generated/ts/@ohos.xml"],
            "@ohos.base": ["./generated/ts/@ohos.base"],
        }
    },
    "include": ["src/**/*.ts", "generated/ts/**/*.ts"],
    "exclude": ["generated/arkts", "src/panda"]
}
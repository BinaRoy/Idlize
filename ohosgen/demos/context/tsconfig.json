{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "outDir": "build/ts",
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "#compat": ["./src/node/compat.ts"],
            "@bundleManager/*": ["src/modules/bundleManager/*"],
            "@ohos.base": ["src/modules/internal/components"]
        }
    },
    "include": ["src/*.ts", "src/node/**/*.ts", "generated/ts/**/*.ts"],
}

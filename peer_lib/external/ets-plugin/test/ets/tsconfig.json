{
    "extends": "@koalaui/arkui-common/config/tsconfig.base.json",
    "include": ["./**/*.ets"],
    "exclude": ["js_output", "specification"],
    "compilerOptions": {
        "types": [],
        "outDir": "./js_output",
        "plugins": [
            {
                "transform": "@koalaui/ets-plugin/build/lib/src/ArkExpander.js",
                "destination": "../generated",
                "arkui": "@koalaui/arkoala-arkui"
            }
        ],
        "baseUrl": "./",
        "paths": {
            "@kit.AbilityKit": ["./arkoala-ability/@kit.AbilityKit"],
            "@ohos.app.ability.UIAbility": ["./arkoala-ability/@ohos.app.ability.UIAbility"]
        }
    }
}

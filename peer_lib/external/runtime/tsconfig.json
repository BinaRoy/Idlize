{
    "extends": "../build-common/tsconfig.json",
    "compilerOptions": {
        "outDir": "build/lib",
        "rootDir": ".",
        "rootDirs": ["src", "test"],
        "module": "CommonJS",
        "plugins": [
            { "transform": "@koalaui/compiler-plugin/build/lib/src/koala-transformer.js", "contextImport": "../../src/internals", "trace": false }
        ]
    },
    "include": ["src/**/*"],
    "references": [
        { "path": "../compiler-plugin" },
        { "path": "../common" },
        { "path": "../compat" }
    ]
}

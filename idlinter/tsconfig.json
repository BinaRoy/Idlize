{
    "compilerOptions": {
        "target": "es2017",
	"experimentalDecorators": true,
        "lib": ["ESNext", "ESNext.WeakRef"],
        "moduleResolution": "node",
        "composite": true,
        "incremental": true,
        "declarationMap": true,
        "sourceMap": true,
        "declaration": true,
        "noEmitOnError": true,
        "strict": true,
        "skipLibCheck": true,
        "removeComments": false,
        "outDir": "build/lib",
        "rootDirs": ["src"],
        "module": "CommonJS",
    },
    "include": ["src/**/*"]
}
